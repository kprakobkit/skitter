<div class='container'>
  <div class="row">
      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane active" id="signup">
          <form role="form" name='signup' action="/signup/new" method='POST'>
            <h3>Wanna Skeet? <small>Sign up</small></h3>
            <div class="form-group">
              <label>What's Your Name?</label>
              <input class="form-control" type='text' name='user[name]' placeholder='Enter name' required>
            </div>
            <div class="form-group">
              <label>What is your email?</label>
              <input class="form-control" type='email' name='user[email]' placeholder='e.g. me@mail.com' required>
            </div>
            <div class="form-group">
              <label>What city do you hail from?</label>
              <input class="form-control" type='text' name='user[city]' placeholder='Enter city' required>
            </div>
            <div class="form-group">
              <label>What state is that in?</label>
              <input class="form-control" type='text' name='user[state]' placeholder='Enter state' required>
            </div>
            <div class="form-group">
              <label>BIO</label>
              <textarea name='user[bio]' placeholder='Tell us a little about yourself'></textarea>
            </div>
              <br>
              <input class="btn btn-primary" type='submit' name='Sign Up' value='Sign Up'>
            </div>
          </form>
        </div>
    </div>
  </div>
