<% @user.get_own_skeets.each do |skeet| %>
  <div>
    <p><span class="lead"><strong><%= @user.username %></strong></span> <%= @user.created_at.strftime("on %b %e") %></p>
    <% if skeet.reskeet %>
      <p><small>
        reskeeted from <a href="/user/<%= skeet.author.id %>/profile/user_skeets"><%= skeet.author.username %></a>
      </small></p>
    <% end %>
    <p class="lead"><%= skeet.skeet %></p>
    <div class="row">
      <div class="col-xs-1">
    <form name='reskeet' action="/user/<%= current_user.id %>/reskeet/<%= skeet.author_id %>/<%= skeet.skeet %>" method='post'>
      <button class="btn btn-info btn-xs" type='submit' name='delete'>Reskeet</button>
    </form>
  </div>
      <div class="col-xs-1">
    <%if @user.id == current_user.id %>
      <form name='delete-skeet' action="/user/<%= current_user.id %>/edit/<%= skeet.id %>" method='post'>
          <button class="btn btn-info btn-xs" type='submit' name='delete'>Delete</button>
      </form>
    <% end %>
  </div>
    </div>
    <hr>
  </div>
<% end %>
