<div class='container'>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <p class="text-center"><img src="http://www.gravatar.com/avatar/205e460b479e2e5b48aec07710c08d50?s=200" alt="..." class="img-circle"></p>
    </div>
  </div>
  <h2 class="text-center"><%= @user.username %></h2>
  <p class="text-center">
    <% if current_user.id == @user.id %>
    <% elsif current_user.followees.exists?(id: @user.id) %>
      <form action="/unfollow/<%= @user.id %>" method="post">
        <p class="text-center"><button class="btn btn-primary" type="submit">
          Unfollow <%= @user.username %>
        </button>
      </p>
      </form>
    <% else %>
      <form action="/follow/<%= @user.id %>" method="post">
        <p class="text-center"><button class="btn btn-primary" type="submit">
          Follow <%= @user.username %>
        </button>
      </p>
      </form>
    <% end %>
  </p>
</div>

<div>
  <a href="/user/<%= @user.id %>/profile/user_skeets">
    <%= @user.username %>'s skeets
  </a><br>
  <a href="/user/<%= @user.id %>/profile/followees">
    <%= @user.username %>'s followees
  </a><br>
  <a href="/user/<%= @user.id %>/profile/followers">
    <%= @user.username %>'s followers
  </a>
  <p>bio</p>
  <p>location</p>
</div>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <% if @partial == "followees" %>
        <%= erb :followees %>
      <% elsif @partial == "followers" %>
        <%= erb :followers %>
      <% elsif @partial == "user_skeets" %>
        <%= erb :user_skeets %>
      <% elsif @partial == "show_users" %>
        <%= erb :show_users %>
      <% end %>
    </div>
  </div>


